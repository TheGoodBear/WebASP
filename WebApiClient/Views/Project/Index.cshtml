@model WebApiClient.ViewModels.ProjectVM

<h1>@Model.PageTitle</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">@Model.CreateText</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEntity.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentEntity.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Entities)
        {
            <tr>
                <td class="col-md-3">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>
                <td class="col-md-6">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="col-md-3">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                        @Model.EditText
                    </a>
                    <a class="btn btn-warning" asp-action="Delete" asp-route-id="@item.Id">
                        @Model.DeleteText
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
